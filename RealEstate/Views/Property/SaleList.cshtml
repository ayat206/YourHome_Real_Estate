@model IEnumerable<InfraStructure.ViewModels.PropertyVm>


<!-- Property List Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <h2 class="mb-3">Listing For Sale</h2>

                </div>
            </div>

            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        @foreach (var property in Model)
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="property-item rounded overflow-hidden">
                                    <div class="position-relative overflow-hidden">
                                        <a asp-action="PropertyDetails" asp-controller="Property" asp-route-id="@property.Id"><img class="img-fluid property-image" src="~/images/@property.Image" alt=""></a>
                                        <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">@property.choise</div>
                                        <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">@property.type</div>
                                    </div>
                                    <div class="p-4 pb-0">
                                        <h5 class="text-primary mb-3"> @property.Price EGP</h5>
                                        <a class="d-block h5 mb-2" asp-action="PropertyDetails" asp-controller="Property" asp-route-id="@property.Id">@property.Title</a>
                                        <p><i class="fa fa-map-marker-alt text-primary me-2"></i>@property.Address</p>
                                    </div>
                                    <div class="d-flex border-top">
                                        <small class="flex-fill text-center border-end py-2"><i class="fa fa-ruler-combined text-primary me-2"></i>@property.Size Square Meter</small>
                                        <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>@property.Rooms beds</small>
                                        <small class="flex-fill text-center py-2"><i class="fa fa-bath text-primary me-2"></i>@property.Baths baths</small>
                                    </div>
                                </div>
                            </div>
                        }

                        <a class="btn btn-outline-primary" asp-action="Index" asp-controller="Home">Back</a>

                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Property List End -->
