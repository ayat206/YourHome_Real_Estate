

@{
    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
    ViewData["Title"] = "Home Page";
}
@using InfraStructure.ViewModels
@model PropertyListPlusTypeVm

@{
    var typesForDropDown = Model.types;
    var choisesForDropDown = Model.choises;
    var type = Model.propertyTypesCountVm;
    var list = Model.propertyList;
}

<!-- Header Start -->
<div class="container-fluid header bg-white p-0">
    <div class="row g-0 align-items-center flex-column-reverse flex-md-row">
        <div class="col-md-6 p-5 mt-lg-5">
            <h1 class="display-5 animated mb-4">Find the <span class="text-primary">Perfect Home</span> for Your Family</h1>

            <p class="animated  mb-4 pb-2">
                Discover your dream home where comfort meets convenience.Start your journey today and experience the joy of a truly welcoming home.
            </p>
            <a asp-action="PropertyGetAllForOwner" asp-controller="Property" class="btn btn-primary py-3 px-5 me-3 animated">Get Started</a>
        </div>
        <div class="col-md-6 animated">
            <div class="owl-carousel header-carousel">
                <div class="owl-carousel-item">
                    <img class="img-fluid" src="~/theme/img/carousel-1.jpg" alt="">
                </div>
                <div class="owl-carousel-item">
                    <img class="img-fluid" src="~/theme/img/carousel-2.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Search Start -->
<div class="container-fluid bg-primary mb-5" style="padding: 35px;">
    <div class="container">
        <form method="post" asp-action="SearchBoxForOwner" asp-controller="Home">
            <div class="row g-2">
                <div class="col-md-10">
                    <div class="row g-2">
                        <div class="col-md-4">
                            <input type="text" name="location" class="form-control border-0 py-3" placeholder="Location" required>
                        </div>
                        <div class="col-md-4">
                            <select name="typeId" class="form-select border-0 py-3" required>
                                <option value="">Property type</option>
                                @{
                                    if (typesForDropDown != null)
                                    {
                                        foreach (var m in typesForDropDown)
                                        {
                                            <option value="@m.Id">@m.Type1</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <select name="choiseId" class="form-select border-0 py-3" required>
                                <option value="">Property choise</option>
                                @{
                                    if (choisesForDropDown != null)
                                    {
                                        foreach (var m in choisesForDropDown)
                                        {
                                            <option value="@m.Id">@m.Choise1</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark border-0 w-100 py-3">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Search End -->
<!-- Category Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 600px;">
            <h1 class="mb-3">Property Types</h1>
            <p>Different types of properties available here.</p>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-sm-6">
                <a class="cat-item d-block bg-light text-center rounded p-3" asp-action="ApartmentListForOwner" asp-controller="Property">
                    <div class="rounded p-4">
                        <div class="icon mb-3">
                            <img class="img-fluid" src="~/theme/img/icon-apartment.png" alt="Icon">
                        </div>
                        <h6>Apartment</h6>
                        <span>@type.ApartmentCount Properties</span>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a class="cat-item d-block bg-light text-center rounded p-3" asp-action="villaListForOwner" asp-controller="Property">
                    <div class="rounded p-4">
                        <div class="icon mb-3">
                            <img class="img-fluid" src="~/theme/img/icon-villa.png" alt="Icon">
                        </div>
                        <h6>Villa</h6>
                        <span>@type.VillCount Properties</span>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a class="cat-item d-block bg-light text-center rounded p-3" asp-action="HomeListForOwner" asp-controller="Property">
                    <div class="rounded p-4">
                        <div class="icon mb-3">
                            <img class="img-fluid" src="~/theme/img/icon-house.png" alt="Icon">
                        </div>
                        <h6>Home</h6>
                        <span>@type.HomeCount Properties</span>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a class="cat-item d-block bg-light text-center rounded p-3" asp-action="OfficeListForOwner" asp-controller="Property">
                    <div class="rounded p-4">
                        <div class="icon mb-3">
                            <img class="img-fluid" src="~/theme/img/icon-housing.png" alt="Icon">
                        </div>
                        <h6>Office</h6>
                        <span>@type.OfficeCount Properties</span>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a class="cat-item d-block bg-light text-center rounded p-3" asp-action="BuildingListForOwner" asp-controller="Property">
                    <div class="rounded p-4">
                        <div class="icon mb-3">
                            <img class="img-fluid" src="~/theme/img/icon-building.png" alt="Icon">
                        </div>
                        <h6>Building</h6>
                        <span>@type.BuildingCount Properties</span>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a class="cat-item d-block bg-light text-center rounded p-3" asp-action="TownHouseListForOwner" asp-controller="Property">
                    <div class="rounded p-4">
                        <div class="icon mb-3">
                            <img class="img-fluid" src="~/theme/img/icon-neighborhood.png" alt="Icon">
                        </div>
                        <h6>Townhouse</h6>
                        <span>@type.TownHouseCount Properties</span>
                    </div>
                </a>
            </div>


        </div>
    </div>
</div>
<!-- Category End -->
<!-- Property List Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="text-start mx-auto mb-5">
                    <h1 class="mb-3">Property Listing</h1>
                    <p>All you need are here.</p>
                </div>
            </div>
            <div class="col-lg-6 text-start text-lg-end">
                <ul class="nav nav-pills d-inline-flex justify-content-end mb-5">
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-primary" asp-action="SaleListForOwner" asp-controller="Property">For Sell</a>
                    </li>
                    <li class="nav-item me-0">
                        <a class="btn btn-outline-primary" asp-action="RentListForOwner" asp-controller="Property">For Rent</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">

                    @foreach (var property in list)
                    {
                        <div class="col-lg-4 col-md-6">
                            @* wow fadeInUp remove classes*@
                            <div class="property-item rounded overflow-hidden">
                                <div class="position-relative overflow-hidden">
                                    <a asp-action="PropertyDetailsForOwner" asp-controller="Property" asp-route-id="@property.Id"><img class="img-fluid property-image" src="~/images/@property.Image" alt=""></a>
                                    <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">@property.choise</div>
                                    <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">@property.type</div>
                                </div>
                                <div class="p-4 pb-0">
                                    <h5 class="text-primary mb-3"> @property.Price EGP</h5>
                                    <a class="d-block h5 mb-2" asp-action="PropertyDetailsForOwner" asp-controller="Property" asp-route-id="@property.Id">@property.Title</a>
                                    <p><i class="fa fa-map-marker-alt text-primary me-2"></i>@property.Address</p>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-ruler-combined text-primary me-2"></i>@property.Size Square Meter</small>
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>@property.Rooms beds</small>
                                    <small class="flex-fill text-center py-2"><i class="fa fa-bath text-primary me-2"></i>@property.Baths baths</small>
                                </div>
                            </div>
                        </div>
                    }


                    <div class="col-12 text-center wow fadeInUp">
                        <a class="btn btn-primary py-3 px-5" asp-action="PropertyGetAllForOwner" asp-controller="Property">Browse More Property</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- Property List End -->
